<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:elevation="8dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/record_LBL_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:maxLines="2"
            android:minLines="2"
            android:text="PLAYER_NAME"
            android:textSize="18sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/record_LBL_coins"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/record_LBL_title"
            android:layout_alignStart="@id/record_LBL_title"
            android:layout_marginStart="0dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:maxLines="2"
            android:minLines="2"
            android:text="COINS"
            android:textSize="14sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/record_LBL_distance"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/record_LBL_title"
            android:layout_alignStart="@id/record_LBL_title"
            android:layout_marginStart="221dp"
            android:layout_marginTop="6dp"
            android:maxLines="2"
            android:minLines="2"
            android:text="DISTANCE"
            android:textSize="14sp" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>